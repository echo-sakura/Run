<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"></constant>
    <constant name="struts.custom.i18n.resources" value="run"></constant>
    <package name="run" namespace="/" extends="struts-default">
        <action name="login" class="actions.Search">
            <result name="success">/login/loginsuccess.jsp</result>
            <result name="fail">/login/loginfail.jsp</result>
            <result name="input">/login/loginerro.jsp</result>
        </action>
        <action name="mylanguage">
            <result>/login/welcome.jsp</result>
        </action>
    </package>
</struts>
